<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demosql.UserController" spacing="10" alignment="CENTER">
    <TextField fx:id="nameField" promptText="Enter name"/>
    <TextField fx:id="emailField" promptText="Enter email"/>
    <Button fx:id="addButton" text="Add User"/>
    <Button fx:id="sortButton" text="Sort by Name"/>
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
        </columns>
    </TableView>
</VBox>